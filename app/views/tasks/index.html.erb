<h2>My Tasks</h2>
<% @tasks.each do |task| %>
  <p> <%= check_box_tag task.title, "value", task.completed %>
  <%= link_to(task.title, task_path(task)) %> </p>

  <%= button_to "Delete", task_path(task),
  method: :delete,
  data: { confirm: "Are you sure?" } %>
<% end %>

<p> <%= link_to "Add a new task", new_path %> </p>
